<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/gif_background"
    tools:context=".Activities.MainActivity">

    <TextView
        android:id="@+id/locationText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TEST"
        android:textColor="@color/md_theme_dark_inverseSurface"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/weatherImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:background="@color/gif_background"
        android:src="@drawable/ic_image_place_holder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/miniumText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="min: 12\u2103"
            android:textColor="@color/md_theme_dark_inverseSurface"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/currentText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="28\u2103"
            android:textColor="@color/md_theme_dark_inverseSurface"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/maximuntext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MAX: 23\u2103"
            android:textColor="@color/md_theme_dark_inverseSurface"
            android:textSize="20sp" />

    </LinearLayout>




</LinearLayout>